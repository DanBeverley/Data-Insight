# =============================================================================
# Data Insight Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# --------------------- REQUIRED ---------------------

# E2B Sandbox (code execution)
E2B_API_KEY=your_e2b_api_key

# LLM Provider (ollama or google)
LLM_PROVIDER=ollama
GOOGLE_API_KEY=your_google_api_key

# Cloudflare R2 Storage (artifacts)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=datainsight-artifacts

# --------------------- OPTIONAL ---------------------

# LangSmith Tracing
LANGSMITH_API_KEY=your_langsmith_key
LANGSMITH_PROJECT=data-insight
LANGSMITH_TRACING=true

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# GCP (for Vertex AI GPU training - optional)
GCP_PROJECT_ID=your_gcp_project
GCP_REGION=us-central1
GCP_STAGING_BUCKET=your_staging_bucket

# OAuth (optional)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_secret

# Azure ML (alternative to GCP)
AZURE_SUBSCRIPTION_ID=your_azure_subscription
AZURE_CLIENT_ID=your_azure_client_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_SECRET=your_azure_client_secret
